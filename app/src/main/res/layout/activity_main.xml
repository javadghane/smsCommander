<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:gravity="center"
        android:text=" كؤنترؤل كردنى باخ و زه رعات "
        android:textColor="@color/white"
        android:textSize="26dp" />

    <EditText
        android:id="@+id/phoneNm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="07501821314"
        android:textColor="@android:color/white" />


    <ImageView
        android:id="@+id/imgTop"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/tvAppName"
        android:background="@drawable/car"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imgBottom"
        android:layout_below="@+id/imgTop"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="152dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <EditText
                    android:id="@+id/edtTimer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="36dp"
                    android:layout_marginBottom="76dp"
                    android:background="#39A60A"
                    android:ems="3"
                    android:hint="Timer1"
                    android:inputType="numberDecimal"
                    android:maxLength="3"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tTimerS1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="48dp"
                    android:text="0000"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/t_v_timeShow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="14dp"
                    android:text="0000"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:textStyle="normal" />
            </RelativeLayout>


            <com.suke.widget.SwitchButton
                android:id="@+id/sw1"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:id="@+id/imgGif1"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/off_anim" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="152dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <EditText
                    android:id="@+id/edtTimer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="36dp"
                    android:layout_marginBottom="74dp"
                    android:background="#39A60A"
                    android:ems="3"
                    android:hint="Timer1"
                    android:inputType="numberDecimal"
                    android:maxLength="3"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tTimerS2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="48dp"
                    android:text="0000"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/t_v_timeShow2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="14dp"
                    android:text="0000"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:textStyle="normal" />
            </RelativeLayout>


            <com.suke.widget.SwitchButton
                android:id="@+id/sw2"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:sb_checked="true"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:id="@+id/imgGif2"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/on_anim" />

        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="152dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <EditText
                    android:id="@+id/edtTimer3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="36dp"
                    android:layout_marginBottom="76dp"
                    android:background="#39A60A"
                    android:ems="3"
                    android:hint="Timer1"
                    android:inputType="numberDecimal"
                    android:maxLength="3"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tTimerS3"
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="48dp"
                    android:text="0000"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/t_v_timeShow3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="14dp"
                    android:text="0000"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:textStyle="normal" />
            </RelativeLayout>


            <com.suke.widget.SwitchButton
                android:id="@+id/sw3"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:id="@+id/imgGif3"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/off_anim" />

        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgBottom"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/sss" />
</RelativeLayout>